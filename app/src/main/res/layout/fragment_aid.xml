<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/DarkTheme"
    app:cardBackgroundColor="@color/DarkTheme"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/covidid"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/GreenBack"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Pandamic Diseas"
                    android:textSize="30dp"
                    android:fontFamily="@font/ptsansnarrow_bold"
                    android:textAlignment="center"
                    android:textColor="@color/DarkTheme"
                    />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/covid"/>


            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/commondiseas"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/GreenBack"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Common Diseas"
                    android:textSize="30dp"
                    android:fontFamily="@font/ptsansnarrow_bold"
                    android:textAlignment="center"
                    android:textColor="@color/DarkTheme"
                    />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/diseas"/>



            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>


</ScrollView>