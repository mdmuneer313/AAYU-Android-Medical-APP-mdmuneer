<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/GreenBack</item>
        <item name="colorPrimaryDark">@color/DarkTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="exampleToast">
        <item name="stColorBackground">#F44336</item>
        <item name="stTextColor">@color/DarkTheme</item>
        <item name="stStrokeColor">@color/DarkTheme</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/DarkTheme</item>
        <item name="stFont">@font/roboto_regular</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#37BD12</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>


</resources>
